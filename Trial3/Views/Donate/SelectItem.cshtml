@model Trial3.Models.UserDonation
@{
    ViewBag.Title = "SelectItem";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="container"><h2>Fill up to Schedule PickUp</h2></div>
@using (Html.BeginForm(FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.Hidden("BasicHiddenName", null, new { @id = "BasicHiddenName" })
                @Html.HiddenFor(model => model.UserId, new { Value = ViewBag.UserId })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ItemsId, "ItemsId", htmlAttributes: new { @class = "control-label col-md-2",  style = "font-size: 20px;color:black" })
            <div class="col-md-10">
                @Html.DropDownList("ItemsId", (SelectList)ViewBag.ItemsId, htmlAttributes: new { @class = "form-control" })
                @*@Html.DropDownListFor(model => model.ItemsId, (SelectList)ViewBag.ItemsId)*@
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2 " , style = "font-size: 20px;color:black" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 20px;color:black" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Go!" class="btn btn-default" />
            </div>
        </div>
    </div>
}