                    <li>@Html.ActionLink("Contact Us","Index","Email")</li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Donate Something<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Donate", "Index", "Donate")</li>
                            <li>@Html.ActionLink("View Your Donations", "Index", "ViewDonations")</li>
                            
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Events<span class="caret"></span></a>
                        <ul class="dropdown-menu">
